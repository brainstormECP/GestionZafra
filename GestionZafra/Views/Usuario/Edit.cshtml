@model GestionZafra.Models.Usuario

@{
    ViewBag.Title = "Editar";
}
<div class="span5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset class="data-fluid">
            <legend>Usuario</legend>

            @Html.HiddenFor(model => model.id)

            <div class="row-form">
                @Html.LabelFor(model => model.nombreUsuario)
            </div>
            <div class="row-form">
                @Html.EditorFor(model => model.nombreUsuario)
                @Html.ValidationMessageFor(model => model.nombreUsuario)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.pass)
            </div>
            <div class="row-form">
                @Html.EditorFor(model => model.pass)
                @Html.ValidationMessageFor(model => model.pass)
            </div>
            
             <div class="row-form">
                @Html.LabelFor(model => model.activo)
            </div>
            <div class="row-form">
                @Html.EditorFor(model => model.activo)
                @Html.ValidationMessageFor(model => model.activo)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.Rolid, "Rol")
            </div>
            <div class="row-form">
                @Html.DropDownList("Rolid")
                @Html.ValidationMessageFor(model => model.Rolid)
            </div>
            <div class="toolbar bottom tar">
                @Html.ActionLink("Atras", "Index",null,new{Class="btn"})
                <input class="btn btn-success" type="submit" value="Guardar" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
