@model IEnumerable<GestionZafra.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
    ViewBag.Message = "Usuarios";
}
<div class="content">
    <div class="row-fluid">
        <div class="span12">
            <div class="block">
                <div class="head dblue">
                    <div class="icon"><span class="ico-layout-9"></span></div>
                     @Html.ActionLink("Nuevo", "Create")
                </div>
                <div class="data-fluid">
                    <table class="table fpTable lcnp" cellpadding="0" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.nombreUsuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rol.descripcionRol)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.activo)
                                </th>
                                <th width="80" class="TAC">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nombreUsuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rol.descripcionRol)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.activo)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit","Usuario")/@item.id" class="button green">
                                            <div class="icon"><span class="ico-pencil"></span></div>
                                        </a>
                                        <a href="@Url.Action("Delete","Usuario")/@item.id" class="button red">
                                            <div class="icon"><span class="ico-remove"></span></div>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>