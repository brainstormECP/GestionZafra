@model IEnumerable<GestionZafra.Models.DiarioEquiposZafra>

@{
    ViewBag.Title = "Diarios de Equipos de Zafra";
}

<div class="content">
    <div class="row-fluid">
        <div class="span12">
            <div class="block">
                <div class="head dblue">
                    <div class="icon"><span class="ico-layout-9"></span></div>
                    @Html.ActionLink("Nuevo", "Create")
                </div>
                <div class="data-fluid">
                    <table class="table fpTable lcnp" cellpadding="0" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlanEquiposAgricZafra)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fecha)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.arrobasTiradas) 
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.parqueParado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usuario.nombreUsuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Zafras.descripcionZafra)
                                </th>
                                <th width="80" class="TAC">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlanEquiposAgricZafra.ParqueEquipos.Suministradores.TiposSectorPropiedad.nombreTipoSector)
                                        @Html.DisplayFor(modelItem => item.PlanEquiposAgricZafra.ParqueEquipos.Suministradores.nombreSuministrador)
                                        @Html.DisplayFor(modelItem => item.PlanEquiposAgricZafra.CentrosRecepcion.nombreCentroRecepcion)
                                        @Html.DisplayFor(modelItem => item.PlanEquiposAgricZafra.ParqueEquipos.TipoEquipos.descripcionEquipo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fecha)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.arrobasTiradas) @@
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.parqueParado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Usuario.nombreUsuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Zafras.descripcionZafra)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit","DiarioEquiposZafra")/@item.PlanEquiposAgricZafraid" class="button green">
                                            <div class="icon"><span class="ico-pencil"></span></div>
                                        </a>
                                        <a href="@Url.Action("Delete","DiarioEquiposZafra")/@item.PlanEquiposAgricZafraid" class="button red">
                                            <div class="icon"><span class="ico-remove"></span></div>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>