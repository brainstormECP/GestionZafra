@model GestionZafra.Models.DiarioEquiposZafra

@{
    ViewBag.Title = "Editar";
}
<div class="span5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset class="data-fluid">
            <legend>Diario de Equipos de Zafra</legend>

            <div class="row-form">
                @Html.HiddenFor(model => model.PlanEquiposAgricZafraid)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.arrobasTiradas)
            </div>
            <div class="row-form">
                <div class="input-append">
                    @Html.EditorFor(model => model.arrobasTiradas)
                    <span class="add-on blue">
                        <i class="icon-white">@@</i>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.arrobasTiradas)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.parqueParado)
            </div>
            <div class="row-form">
                @Html.TextBoxFor(model => model.parqueParado,new{Id="spinner"})
                @Html.ValidationMessageFor(model => model.parqueParado)
            </div>
            <div class="row-form">
                @Html.HiddenFor(model => model.Zafrasid)                                                                            
            </div>
            
            <div class="toolbar bottom tar">
                 @Html.ActionLink("Lista de Diarios de Equipo de Zafra", "Index",null,new{Class="btn"})
                <input class="btn btn-success" type="submit" value="Guardar" />
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
