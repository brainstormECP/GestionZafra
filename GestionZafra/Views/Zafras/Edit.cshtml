@model GestionZafra.Models.Zafras

@{
    ViewBag.Title = "Editar";
}

<div class="span5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset class="data-fluid">
            <legend>Zafras</legend>

            @Html.HiddenFor(model => model.id)

            <div class="row-form">
                @Html.LabelFor(model => model.descripcionZafra)
            </div>
            <div class="row-form">
                @Html.EditorFor(model => model.descripcionZafra)
                @Html.ValidationMessageFor(model => model.descripcionZafra)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.fechaInicio)
            </div>
            <div class="row-form">
                @Html.DisplayFor(model => model.fechaInicio)
                @Html.HiddenFor(model => model.fechaInicio)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.fechaFin)
            </div>
            <div class="row-form">
                @Html.DisplayFor(model => model.fechaFin)
                @Html.HiddenFor(model => model.fechaFin)
            </div>

            <div class="toolbar bottom tar">
                @Html.ActionLink("Atras", "Index", null, new { Class = "btn" })
                <input class="btn btn-success" type="submit" value="Guardar" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/custom.validation.js")"></script>
}
