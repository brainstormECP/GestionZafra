@model GestionZafra.Models.PlanOperadoresCombinadas

@{
    ViewBag.Title = "Nuevo";
}

<div class="span5">
    @using (Html.BeginForm())
    {
        <fieldset class="data-fluid">
            <legend>Plan de Operadores de Combinadas</legend>
            @Html.ValidationSummary(true)
            <div class="row-form">
                @Html.LabelFor(model => model.OperadorCombinadaid, "OperadorCombinada")
            </div>
            <div class="row-form">
                @Html.DropDownList("OperadorCombinadaid")
                @Html.ValidationMessageFor(model => model.OperadorCombinadaid)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.tareaDiaria)
            </div>
            <div class="row-form">
                <div class="input-append">
                     @Html.EditorFor(model => model.tareaDiaria)
                    <span class="add-on blue">
                        <i class="icon-white">@@</i>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.tareaDiaria)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.CentrosRecepcionid, "CentrosRecepcion")
            </div>
            <div class="row-form">
                @Html.DropDownList("CentrosRecepcionid")
                @Html.ValidationMessageFor(model => model.CentrosRecepcionid)
            </div>

            <div class="toolbar bottom tar">
                 @Html.ActionLink("Atras", "Index",null,new{Class="btn"})
                <input class="btn btn-success" type="submit" value="Nueva" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
