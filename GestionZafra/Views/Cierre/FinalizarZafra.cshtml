@model GestionZafra.Models.Zafras

@{
    ViewBag.Title = "Finalizar Zafra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset class="data-fluid">
            <legend>Datos de Zafra</legend>
            @Html.HiddenFor(model => model.id)

            <div class="row-form">
                @Html.LabelFor(model => model.descripcionZafra)
                @Html.DisplayFor(model => model.descripcionZafra)
                @Html.HiddenFor(model => model.descripcionZafra)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.fechaInicio)
                @Html.DisplayFor(model => model.fechaInicio)
                @Html.HiddenFor(model => model.fechaInicio)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.fechaFin)
                @Html.DisplayFor(model => model.fechaFin)
                @Html.HiddenFor(model => model.fechaFin)

            </div>
            <div class="toolbar bottom tar">
                @Html.ActionLink("Atras", "Index", "Home", null, new { Class = "btn" })
                <input class="btn btn-success" type="submit" value="Finalizar" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}