@model IEnumerable<GestionZafra.Models.DiarioOperadorCombinadas>

@{
    ViewBag.Title = "Diarios de Operadores de Combinadas";
}

<div class="content">
    <div class="row-fluid">
        @Html.ValidationSummary();
        <div class="span12">
            <div class="block">
                <div class="head dblue">
                    <div class="icon"><span class="ico-layout-9"></span></div>
                    @Html.ActionLink("Nuevo", "Create")
                </div>
                <div class="data-fluid">
                    <table class="table fpTable lcnp" cellpadding="0" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlanOperadoresCombinadas)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Campo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EstadoEquipo.nombreEstado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cantQuemada)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cantQuemadaProgram)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cantVerde)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usuario.nombreUsuario)
                                </th>
                                <th width="80" class="TAC">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlanOperadoresCombinadas.OperadorCombinada.nombreOperador)
                                        @Html.DisplayFor(modelItem => item.PlanOperadoresCombinadas.CentrosRecepcion.nombreCentroRecepcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Campo.Suministradores.nombreSuministrador)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EstadoEquipo.nombreEstado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cantQuemada) @@
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cantQuemadaProgram) @@
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cantVerde) @@
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Usuario.nombreUsuario)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit","DiarioOperadorCombinadas")/@item.PlanOperadoresCombinadasid" class="button green">
                                            <div class="icon"><span class="ico-pencil"></span></div>
                                        </a>
                                        <a href="@Url.Action("Delete","DiarioOperadorCombinadas")/@item.PlanOperadoresCombinadasid" class="button red">
                                            <div class="icon"><span class="ico-remove"></span></div>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
