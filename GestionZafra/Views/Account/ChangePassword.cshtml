@model GestionZafra.Models.ChangePasswordModel

<h3>Change password</h3>

@using (Html.BeginForm("ChangePassword", "Account"))
{
    @Html.AntiForgeryToken()
    <fieldset class="data-fluid">
        <legend>Cambiar Contraseña</legend>

        <div>
            <label>Contraseña Vieja</label>
            @Html.PasswordFor(m => m.OldPassword, new { Class = "form-control" , Value = "" })
            @Html.ValidationMessageFor(m => m.OldPassword)
        </div>

        <div>
            <label>Contraseña Nueva</label>
            @Html.PasswordFor(m => m.NewPassword, new { Class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>

        <div>
            <label>Confirme Contraseña Nueva</label>
            @Html.PasswordFor(m => m.ConfirmNewPassword, new { Class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
        </div>

        <input type="submit" value="Cambiar Contraseña" class="btn btn-primary" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
