@model GestionZafra.Models.ParqueEquipos

@{
    ViewBag.Title = "Editar";
}
<div class="span5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset class="data-fluid">
            <legend>Parque de Equipos</legend>

            @Html.HiddenFor(model => model.id)

            <div class="row-form">
                @Html.LabelFor(model => model.cantidadEquipos)
            </div>
            <div class="row-form">
                @Html.TextBoxFor(model => model.cantidadEquipos,new{Id="spinner"})
                @Html.ValidationMessageFor(model => model.cantidadEquipos)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.TipoEquiposid, "TipoEquipos")
            </div>
            <div class="row-form">
                @Html.DropDownList("TipoEquiposid")
                @Html.ValidationMessageFor(model => model.TipoEquiposid)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.Suministradoresid, "Suministradores")
            </div>
            <div class="row-form">
                @Html.DropDownList("Suministradoresid")
                @Html.ValidationMessageFor(model => model.Suministradoresid)
            </div>
            <div class="toolbar bottom tar">
                @Html.ActionLink("Lista de Parque de Equipos", "Index",null,new{Class="btn"})
                <input class="btn btn-success" type="submit" value="Guardar" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
