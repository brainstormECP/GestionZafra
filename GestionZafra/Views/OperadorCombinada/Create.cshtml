@model GestionZafra.Models.OperadorCombinada

@{
    ViewBag.Title = "Nuevo";
}

<div class="span5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset class="data-fluid">
            <legend>Operador de Combinada</legend>

            <div class="row-form">
                @Html.LabelFor(model => model.nombreOperador)
            </div>
            <div class="row-form">
                @Html.EditorFor(model => model.nombreOperador)
                @Html.ValidationMessageFor(model => model.nombreOperador)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.MarcasCombinadasid, "MarcasCombinadas")
            </div>
            <div class="row-form">
                @Html.DropDownList("MarcasCombinadasid")
                @Html.ValidationMessageFor(model => model.MarcasCombinadasid)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.PelotonCombinadasid, "PelotonCombinadas")
            </div>
            <div class="row-form">
                @Html.DropDownList("PelotonCombinadasid")
                @Html.ValidationMessageFor(model => model.PelotonCombinadasid)
            </div>
            
             <div class="row-form">
                @Html.LabelFor(model => model.activo)
            </div>
            <div class="row-form">
                @Html.EditorFor(model => model.activo)
                @Html.ValidationMessageFor(model => model.activo)
            </div>

            <div class="toolbar bottom tar">
                 @Html.ActionLink("Lista de Operadores de Combinada", "Index",null,new{Class="btn"})
                <input class="btn btn-success" type="submit" value="Nuevo" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
