@model GestionZafra.Models.PelotonCombinadas

@{
    ViewBag.Title = "Nuevo";
}

<div class="span5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset class="data-fluid">
            <legend>Peloton de Combinadas</legend>
            
            <div class="row-form">
                @Html.LabelFor(model => model.Suministradoresid, "Suministradores")
            </div>
            <div class="row-form">
                @Html.DropDownList("Suministradoresid")
                @Html.ValidationMessageFor(model => model.Suministradoresid)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.parque)
            </div>
            <div class="row-form">
                @Html.TextBoxFor(model => model.parque,new {Id="spinner"})
                @Html.ValidationMessageFor(model => model.parque)
            </div>
            
            <div class="toolbar bottom tar">
                @Html.ActionLink("Lista de Pelotones de Combinadas", "Index",null,new{Class="btn"})
                <input class="btn btn-success" type="submit" value="Nueva" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
