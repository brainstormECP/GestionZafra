@model GestionZafra.Models.ParametrosFechaReporteModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Caña x Operador";
    ViewBag.Message = "Caña Cortada por Operadores";
}

<div class="span5">
    @using (Html.BeginForm("CanaPorOperador", "Reportes", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <fieldset class="data-fluid">
            <legend>Caña Cortada por Operadores</legend>

            <div class="row-form">
                @Html.LabelFor(model => model.FechaInicio)
            </div>
            <div class="row-form">
                @Html.TextBoxFor(model => model.FechaInicio, new { Class= "datepicker"})
                @Html.ValidationMessageFor(model => model.FechaInicio)
            </div>

            <div class="row-form">
                @Html.LabelFor(model => model.FechaFin)
            </div>
            <div class="row-form">
                @Html.TextBoxFor(model => model.FechaFin, new { Class= "datepicker"})
                @Html.ValidationMessageFor(model => model.FechaFin)
            </div>

            <div class="toolbar bottom tar">
                <input class="btn" type="submit" value="Buscar" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}