@model GestionZafra.Models.TipoEquipos

@{
    ViewBag.Title = "Editar";
}
<div class="span5">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset class="data-fluid">
            <legend>Tipo de Equipos</legend>

            @Html.HiddenFor(model => model.id)

            <div class="row-form">
                @Html.LabelFor(model => model.descripcionEquipo)
            </div>
            <div class="row-form">
                @Html.EditorFor(model => model.descripcionEquipo)
                @Html.ValidationMessageFor(model => model.descripcionEquipo)
            </div>
            <div class="toolbar bottom tar">
                @Html.ActionLink("Lista de Tipo de Equipos", "Index",null,new {Class="btn"})
                <input class="btn btn-success" type="submit" value="Guardar" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
